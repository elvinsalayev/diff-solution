@model Category
@{
    ViewData["Title"] = "Create";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Kateqoriyalar</h4>
                    <span>Bütün kateqoriyaların siyahısı</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="categories" asp-action="index">Kateqoriyalar</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Hover table card start -->
    <div class="card">
        <div class="card-block">
            <div class="card-block">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="messages"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ParentId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="ParentId" asp-items="@ViewBag.Categories" class="form-control select2">
                                <option value="" selected disabled>~~~~Seçin~~~~</option>
                                </select>
                            <span asp-validation-for="ParentId" class="messages"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success m-b-0">Təsdiqlə</button>
                            <a asp-action="index" class="btn btn-primary m-b-0">Geri Qayıt</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Hover table card end -->

</div>
<!-- Page-body end -->
