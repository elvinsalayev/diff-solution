@model ContactPost

@{
    ViewData["Title"] = "Cavabla";
}


<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Sorğular</h4>
                    <span>Bütün sorğuların siyahısı</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="contactposts" asp-action="index">Sorğular</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Hover table card start -->
    <div class="card">
        <div class="card-block">
            <div class="card-block">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="form-control">@Model.Email</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Message" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="form-control">@Model.Message</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="Id" />
                            <textarea class="form-control" asp-for="Answer"></textarea>
                            <span asp-validation-for="Answer"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success m-b-0">Göndər</button>
                            <a asp-action="index" class="btn btn-primary m-b-0">Geri Qayıt</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Hover table card end -->

</div>
<!-- Page-body end -->
